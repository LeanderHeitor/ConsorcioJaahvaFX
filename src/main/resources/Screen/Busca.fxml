<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Screen.BuscaController" spacing="20" padding="20">
    <!-- Cabeçalho -->
    <HBox spacing="10">
        <Label text="Buscar Grupo de Consórcio" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Formulário de Busca -->
    <VBox spacing="15">
        <HBox spacing="10">
            <Label text="Digite o Nome do Grupo:"/>
            <TextField fx:id="txtBuscaGrupo" promptText="Pesquisar pelo nome" />
            <Button text="Buscar" fx:id="btnBuscar" />
        </HBox>

        <!-- Lista de Resultados -->
        <VBox>
            <Label text="Resultados da Busca:" style="-fx-font-size: 16px;"/>
            <ListView fx:id="listViewResultados" prefHeight="200"/>
        </VBox>

        <!-- Botões -->
        <HBox spacing="20" alignment="center">
            <Button text="Cancelar" fx:id="btnCancelar" />
        </HBox>
    </VBox>
</VBox>
